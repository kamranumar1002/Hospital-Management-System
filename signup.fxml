<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="your.package.name.SignupUI">

    <Label text="Sign Up" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TextField fx:id="newUsernameField" promptText="New Username"/>
    <PasswordField fx:id="newPasswordField" promptText="New Password"/>
    <Button text="Sign Up" onAction="#handleSignup"/>
    <Hyperlink text="Already have an account? Log in here." onAction="#showLogin"/>

</VBox>
